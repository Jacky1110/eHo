<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolBarIcon">
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:layout_width">44dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="siv_circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="sivCorner16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="vCover">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="tvWrapContentWhite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Theme.EHo.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="roundtextcolor">@color/light_blue_400</item>
    </style>

</resources>