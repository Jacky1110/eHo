<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ivMemberTabIcon">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="tvMemberTabIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/c_4b525b_100</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="vMemberLine0">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/c_eeeeee_100</item>
    </style>

    <style name="tvMemberList">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/c_4b525b_100</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ivMemberArrowIcon">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_right_arrow</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

</resources>