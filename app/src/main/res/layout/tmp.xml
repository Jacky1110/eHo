<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

                <HorizontalScrollView
                    android:id="@+id/hsvTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:scrollbars="none"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/shape_rounded_white_top_16">

                        <androidx.cardview.widget.CardView
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="8dp"
                            style="@style/cvHomeTab" >

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_home_blue">

                                <View
                                    style="@style/vHomeTabIconBg"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <ImageView
                                    android:src="@drawable/ic_booking"
                                    style="@style/ivHomeTabIcon"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                                <TextView
                                    android:id="@+id/tvTabReservationTitle"
                                    android:text="@string/my_reservation"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="16dp"
                                    style="@style/tvHomeTabTitle"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"/>

                                <ImageView
                                    android:id="@+id/ivTabReservationArrow"
                                    style="@style/ivHomeTabIconArrow"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent" />

                                <TextView
                                    style="@style/tvHomeTabMore"
                                    android:text="@string/reservation_record"
                                    app:layout_constraintEnd_toStartOf="@id/ivTabReservationArrow"
                                    app:layout_constraintTop_toTopOf="@id/ivTabReservationArrow"
                                    app:layout_constraintBottom_toBottomOf="@id/ivTabReservationArrow" />

                                <TextView
                                    android:id="@+id/tvTabReservationDate"
                                    android:text="----/--/-- --:--"
                                    android:layout_marginStart="12dp"
                                    style="@style/tvHomeTabContent"
                                    app:layout_constraintVertical_chainStyle="packed"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvTabReservationTitle"
                                    app:layout_constraintBottom_toTopOf="@id/tvTabReservationStore"/>

                                <TextView
                                    android:id="@+id/tvTabReservationStore"
                                    android:text="@string/none_data"
                                    android:layout_marginStart="12dp"
                                    style="@style/tvHomeTabContent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvTabReservationDate"
                                    app:layout_constraintBottom_toTopOf="@id/tvTabReservationTel"/>

                                <ImageView
                                    style="@style/ivHomeTabIcon16"
                                    android:src="@drawable/ic_placeholder"
                                    app:layout_constraintStart_toEndOf="@id/tvTabReservationStore"
                                    app:layout_constraintTop_toTopOf="@id/tvTabReservationStore"
                                    app:layout_constraintBottom_toBottomOf="@id/tvTabReservationStore"/>

                                <TextView
                                    android:id="@+id/tvTabReservationTel"
                                    android:text="@string/none_data"
                                    android:layout_marginStart="12dp"
                                    style="@style/tvHomeTabContent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvTabReservationStore"
                                    app:layout_constraintBottom_toTopOf="@id/ivTabReservationArrow"/>

                                <ImageView
                                    style="@style/ivHomeTabIcon16"
                                    android:src="@drawable/ic_call"
                                    app:layout_constraintStart_toEndOf="@id/tvTabReservationTel"
                                    app:layout_constraintTop_toTopOf="@id/tvTabReservationTel"
                                    app:layout_constraintBottom_toBottomOf="@id/tvTabReservationTel"/>

                                <View
                                    style="@style/vCover"
                                    tools:ignore="MissingConstraints" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_marginStart="8dp"
                            style="@style/cvHomeTab">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_home_green">

                                <View
                                    style="@style/vHomeTabIconBg"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <ImageView
                                    android:src="@drawable/ic_bracelet"
                                    style="@style/ivHomeTabIcon"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                                <TextView
                                    android:id="@+id/tvTabBandTitle"
                                    android:text="@string/band_data"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="16dp"
                                    style="@style/tvHomeTabTitle"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"/>

                                <ImageView
                                    android:id="@+id/ivTabBandArrow"
                                    style="@style/ivHomeTabIconArrow"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent" />

                                <TextView
                                    style="@style/tvHomeTabMore"
                                    android:text="@string/detailed_data"
                                    app:layout_constraintEnd_toStartOf="@id/ivTabBandArrow"
                                    app:layout_constraintTop_toTopOf="@id/ivTabBandArrow"
                                    app:layout_constraintBottom_toBottomOf="@id/ivTabBandArrow" />

                                <TextView
                                    android:id="@+id/tvTabBandStepsTitle"
                                    android:text="@string/steps"
                                    android:layout_marginStart="12dp"
                                    style="@style/tvHomeTabContent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBaseline_toBaselineOf="@id/tvTabBandSteps"/>

                                <TextView
                                    android:id="@+id/tvTabBandSteps"
                                    android:text="@string/none_data"
                                    style="@style/tvHomeTabNumber"
                                    app:layout_constraintVertical_chainStyle="packed"
                                    app:layout_constraintTop_toBottomOf="@id/tvTabBandTitle"
                                    app:layout_constraintBottom_toTopOf="@id/tvTabBandHeartRate"
                                    app:layout_constraintStart_toEndOf="@id/tvTabBandStepsTitle"/>

                                <TextView
                                    android:text="@string/step"
                                    style="@style/tvHomeTabContent"
                                    app:layout_constraintStart_toEndOf="@id/tvTabBandSteps"
                                    app:layout_constraintBaseline_toBaselineOf="@id/tvTabBandSteps"/>

                                <TextView
                                    android:id="@+id/tvTabBandHeartRateTitle"
                                    android:text="@string/heartbeat_time"
                                    android:layout_marginStart="12dp"
                                    style="@style/tvHomeTabContent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBaseline_toBaselineOf="@id/tvTabBandHeartRate"/>

                                <TextView
                                    android:id="@+id/tvTabBandHeartRate"
                                    android:text="@string/none_data"
                                    style="@style/tvHomeTabNumber"
                                    app:layout_constraintVertical_chainStyle="packed"
                                    app:layout_constraintTop_toBottomOf="@id/tvTabBandSteps"
                                    app:layout_constraintBottom_toTopOf="@id/tvTabBandBloodOxygen"
                                    app:layout_constraintStart_toEndOf="@id/tvTabBandHeartRateTitle"/>

                                <TextView
                                    android:text="@string/bpm_unit"
                                    style="@style/tvHomeTabContent"
                                    app:layout_constraintStart_toEndOf="@id/tvTabBandHeartRate"
                                    app:layout_constraintBaseline_toBaselineOf="@id/tvTabBandHeartRate"/>

                                <TextView
                                    android:id="@+id/tvTabBandBloodOxygenTitle"
                                    android:text="@string/blood_oxygen"
                                    android:layout_marginStart="12dp"
                                    style="@style/tvHomeTabContent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBaseline_toBaselineOf="@id/tvTabBandBloodOxygen"/>

                                <TextView
                                    android:id="@+id/tvTabBandBloodOxygen"
                                    android:text="@string/none_data"
                                    style="@style/tvHomeTabNumber"
                                    app:layout_constraintVertical_chainStyle="packed"
                                    app:layout_constraintTop_toBottomOf="@id/tvTabBandHeartRate"
                                    app:layout_constraintBottom_toTopOf="@id/ivTabBandArrow"
                                    app:layout_constraintStart_toEndOf="@id/tvTabBandBloodOxygenTitle"/>

                                <TextView
                                    android:text="@string/percent"
                                    style="@style/tvHomeTabContent"
                                    app:layout_constraintStart_toEndOf="@id/tvTabBandBloodOxygen"
                                    app:layout_constraintBaseline_toBaselineOf="@id/tvTabBandBloodOxygen"/>

                                <View
                                    style="@style/vCover"
                                    tools:ignore="MissingConstraints" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_marginStart="8dp"
                            style="@style/cvHomeTab">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_home_red">

                                <View
                                    style="@style/vHomeTabIconBg"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <ImageView
                                    android:src="@drawable/ic_blood_drop"
                                    style="@style/ivHomeTabIcon"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                                <TextView
                                    android:id="@+id/tvTabEECPTitle"
                                    android:text="@string/eecp_data"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="16dp"
                                    style="@style/tvHomeTabTitle"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"/>

                                <ImageView
                                    android:id="@+id/ivTabEECPArrow"
                                    style="@style/ivHomeTabIconArrow"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent" />

                                <TextView
                                    style="@style/tvHomeTabMore"
                                    android:text="@string/detailed_data"
                                    app:layout_constraintEnd_toStartOf="@id/ivTabEECPArrow"
                                    app:layout_constraintTop_toTopOf="@id/ivTabEECPArrow"
                                    app:layout_constraintBottom_toBottomOf="@id/ivTabEECPArrow" />

                                <TextView
                                    android:id="@+id/tvTabEECPDate"
                                    android:text="----/--/-- --:--"
                                    android:layout_marginStart="12dp"
                                    style="@style/tvHomeTabContent"
                                    app:layout_constraintVertical_chainStyle="packed"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvTabEECPTitle"
                                    app:layout_constraintBottom_toTopOf="@id/tvTabEECPHeartbeat"/>

                                <TextView
                                    android:id="@+id/tvTabEECPHeartbeatTitle"
                                    android:text="@string/heartbeat_time"
                                    android:layout_marginStart="12dp"
                                    style="@style/tvHomeTabContent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBaseline_toBaselineOf="@id/tvTabEECPHeartbeat"/>

                                <TextView
                                    android:id="@+id/tvTabEECPHeartbeat"
                                    android:text="@string/none_data"
                                    style="@style/tvHomeTabNumber"
                                    app:layout_constraintVertical_chainStyle="packed"
                                    app:layout_constraintTop_toBottomOf="@id/tvTabEECPDate"
                                    app:layout_constraintBottom_toTopOf="@id/tvTabEECPBloodOxygen"
                                    app:layout_constraintStart_toEndOf="@id/tvTabEECPHeartbeatTitle"/>

                                <TextView
                                    android:text="@string/bpm_unit"
                                    style="@style/tvHomeTabContent"
                                    app:layout_constraintStart_toEndOf="@id/tvTabEECPHeartbeat"
                                    app:layout_constraintBaseline_toBaselineOf="@id/tvTabEECPHeartbeat"/>

                                <TextView
                                    android:id="@+id/tvTabEECPBloodOxygenTitle"
                                    android:text="@string/blood_oxygen"
                                    android:layout_marginStart="12dp"
                                    style="@style/tvHomeTabContent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBaseline_toBaselineOf="@id/tvTabEECPBloodOxygen"/>

                                <TextView
                                    android:id="@+id/tvTabEECPBloodOxygen"
                                    android:text="@string/none_data"
                                    style="@style/tvHomeTabNumber"
                                    app:layout_constraintVertical_chainStyle="packed"
                                    app:layout_constraintTop_toBottomOf="@id/tvTabEECPHeartbeat"
                                    app:layout_constraintBottom_toTopOf="@id/ivTabEECPArrow"
                                    app:layout_constraintStart_toEndOf="@id/tvTabEECPBloodOxygenTitle"/>

                                <TextView
                                    android:text="@string/percent"
                                    style="@style/tvHomeTabContent"
                                    app:layout_constraintStart_toEndOf="@id/tvTabEECPBloodOxygen"
                                    app:layout_constraintBaseline_toBaselineOf="@id/tvTabEECPBloodOxygen"/>

                                <View
                                    style="@style/vCover"
                                    tools:ignore="MissingConstraints" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            style="@style/cvHomeTab">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clTabMore"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_home_yellow">

                                <View
                                    style="@style/vHomeTabIconBg"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <ImageView
                                    android:src="@drawable/ic_baseline_more_horiz_24"
                                    style="@style/ivHomeTabIcon"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                                <TextView
                                    style="@style/tvHomeTabTitle"
                                    android:text="@string/more_health_data"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                                <View
                                    style="@style/vCover"
                                    tools:ignore="MissingConstraints" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>